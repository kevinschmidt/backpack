<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean id="backpackModel" class="eu.stupidsoup.backpack.model.BackpackModel">
    </bean>
    <bean id="listMan" class="eu.stupidsoup.backpack.server.ListManager">
        <property name="backpackAccessor"><ref bean="backpackAccessor" /></property>
	</bean>
	<bean id="persistMan" class="eu.stupidsoup.backpack.server.PersistenceManager">
        <property name="backpackManager"><ref bean="listMan" /></property>
        <property name="backpackModel"><ref bean="backpackModel" /></property>
	</bean>
		
	<bean id="backpackAccessor" class="eu.stupidsoup.backpack.accessor.AxiomAccessor">
        <property name="url" value="https://soup.backpackit.com/" />
        <property name="apiKey" value="8e549ba5fe851d32ac8ab12d143c19ab723b5002" />
    </bean>
    
    <bean id="backpackViewService" class="eu.stupidsoup.backpack.server.BackpackViewServiceImpl">
		<property name="backpackManager"><ref bean="persistMan" /></property>
	</bean>
	<bean id="backpackController" class="eu.stupidsoup.backpack.server.BackpackController">
		<property name="backpackManager"><ref bean="persistMan" /></property>
	</bean>
	<bean id="refreshController" class="eu.stupidsoup.backpack.server.RefreshController">
		<property name="backpackManager"><ref bean="persistMan" /></property>
	</bean>
	<bean id="backpackViewServiceController" class="org.gwtwidgets.server.spring.GWTRPCServiceExporter">
		<property name="service" ref="backpackViewService" />
	</bean>
	
	<bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="/index.htm">backpackController</prop>
				<prop key="/refresh.htm">refreshController</prop>
				<prop key="/backpackViewService.htm">backpackViewServiceController</prop>
			</props>
		</property>
	</bean>
	
	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass"><value>org.springframework.web.servlet.view.JstlView</value></property>
        <property name="prefix"><value>/WEB-INF/jsp/</value></property>
        <property name="suffix"><value>.jsp</value></property>
    </bean>
</beans>